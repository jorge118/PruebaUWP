<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Grid">

    <Style x:Key="HeaderStyle" TargetType="syncfusion:GridHeaderCellControl">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="#0070C0"/>
    </Style>

    <Style TargetType="syncfusion:VirtualizingCellsControl" x:Key="CustomRowStyle">
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style TargetType="syncfusion:VirtualizingCellsControl" x:Key="alternatingRowStyle">
        <Setter Property="Background" Value="LightGray"/>
    </Style>

</ResourceDictionary>
